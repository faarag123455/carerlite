<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Admin Panel | EliteCareer</title>

  {# Fonts & Icons #}
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css">

  <style>
    :root {
      --primary: #2563eb;
      --primary-light: #60a5fa;
      --accent: #ec4899;
      --light: #f1f5f9;
      --darker: #0f172a;
      --gray: #64748b;
      --gray-light: #e2e8f0;
      --gray-lighter: #f8fafc;
      --success: #16a34a;
      --warning: #f59e0b;
      --error: #ef4444;
      --radius: 0.75rem;
      --radius-lg: 1rem;
      --shadow: 0 8px 20px rgba(15,23,42,0.08);
      --shadow-lg: 0 16px 40px rgba(15,23,42,0.12);
      --transition: 180ms ease;
    }

    * {
      box-sizing: border-box;
    }

    html, body {
      margin: 0;
      padding: 0;
    }

    body.dash-body {
      font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background:
        radial-gradient(circle at top left, #e0f2fe 0, #f9fafb 45%, #f8fafc 100%);
      color: var(--darker);
      -webkit-font-smoothing: antialiased;
    }

    .container {
      max-width: 1120px;
      margin: 0 auto;
      padding: 140px 20px 80px;
    }

    @media (max-width: 768px) {
      .container {
        padding: 110px 16px 56px;
      }
    }

    /* Header */
    .dash-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 16px;
      margin-bottom: 26px;
      flex-wrap: wrap;
    }

    .dash-title {
      font-family: "Plus Jakarta Sans", system-ui, sans-serif;
      font-size: 2rem;
      line-height: 1.2;
      font-weight: 800;
      color: var(--darker);
      margin: 0 0 6px;
      letter-spacing: -0.02em;
    }

    .dash-sub {
      margin: 0;
      color: var(--gray);
      font-size: 0.95rem;
    }

    .dash-actions {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      align-items: center;
      justify-content: flex-end;
    }

    .logout-form {
      margin: 0;
    }

    /* Buttons */
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      padding: 9px 18px;
      border-radius: 999px;
      border: 1px solid transparent;
      font-size: 0.9rem;
      font-weight: 600;
      text-decoration: none;
      cursor: pointer;
      background: linear-gradient(135deg, var(--primary), var(--primary-light));
      color: #ffffff;
      box-shadow: 0 10px 18px rgba(37,99,235,0.25);
      transition: transform var(--transition), box-shadow var(--transition), background var(--transition), opacity var(--transition);
      white-space: nowrap;
    }

    .btn:hover {
      transform: translateY(-1px);
      box-shadow: 0 14px 30px rgba(37,99,235,0.28);
      opacity: 0.97;
    }

    .btn:active {
      transform: translateY(0);
      box-shadow: 0 6px 14px rgba(30,64,175,0.45);
    }

    .btn-secondary {
      background: rgba(15,23,42,0.02);
      color: var(--darker);
      border-color: rgba(148,163,184,0.6);
      box-shadow: 0 8px 18px rgba(15,23,42,0.06);
    }

    .btn-secondary:hover {
      background: rgba(15,23,42,0.06);
    }

    .btn-accent {
      background: linear-gradient(135deg, var(--accent), #f97316);
      border-color: transparent;
      box-shadow: 0 10px 22px rgba(236,72,153,0.35);
    }

    .btn-accent:hover {
      box-shadow: 0 14px 32px rgba(236,72,153,0.4);
    }

    /* Layout */
    .dash-grid {
      display: grid;
      grid-template-columns: minmax(0, 2.1fr) minmax(0, 1.4fr);
      gap: 18px;
    }

    @media (max-width: 900px) {
      .dash-grid {
        grid-template-columns: minmax(0, 1fr);
      }
    }

    /* Cards */
    .dash-card {
      background: #ffffff;
      border-radius: var(--radius-lg);
      border: 1px solid rgba(148,163,184,0.35);
      box-shadow: var(--shadow-lg);
      padding: 0;
      overflow: hidden;
      position: relative;
    }

    .dash-card-head {
      padding: 16px 20px 10px;
      border-bottom: 1px solid var(--gray-light);
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 12px;
      background:
        linear-gradient(180deg, rgba(59,130,246,0.06), transparent),
        radial-gradient(circle at top right, rgba(236,72,153,0.06), transparent 55%);
    }

    .dash-card-title {
      margin: 0;
      font-size: 1.05rem;
      font-weight: 800;
      color: var(--darker);
      display: inline-flex;
      align-items: center;
      gap: 8px;
      font-family: "Plus Jakarta Sans", system-ui, sans-serif;
    }

    .dash-card-body {
      padding: 18px 20px 20px;
      background: #ffffff;
    }

    /* KPI */
    .kpi-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 14px;
    }

    @media (max-width: 768px) {
      .kpi-grid {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
    }

    @media (max-width: 520px) {
      .kpi-grid {
        grid-template-columns: minmax(0, 1fr);
      }
    }

    .kpi {
      border-radius: var(--radius);
      border: 1px solid var(--gray-light);
      padding: 12px 12px 11px;
      background: linear-gradient(135deg, #f8fafc, #ffffff);
      box-shadow: 0 10px 22px rgba(15,23,42,0.04);
    }

    .kpi-top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 8px;
      margin-bottom: 6px;
    }

    .kpi-label {
      font-size: 0.83rem;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: rgba(100,116,139,0.95);
      font-weight: 600;
    }

    .kpi-icon {
      width: 28px;
      height: 28px;
      border-radius: 999px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: rgba(59,130,246,0.08);
      color: var(--primary);
      font-size: 0.86rem;
    }

    .kpi-value {
      font-size: 1.5rem;
      font-weight: 800;
      color: var(--darker);
      letter-spacing: -0.03em;
    }

    /* Secondary card (quick tools) */
    .card-secondary {
      background:
        radial-gradient(circle at top left, rgba(59,130,246,0.06), transparent 60%),
        radial-gradient(circle at bottom right, rgba(15,23,42,0.06), transparent 55%),
        #0f172a;
      color: #e5e7eb;
      border-color: rgba(15,23,42,0.7);
    }

    .card-secondary .dash-card-head {
      border-bottom-color: rgba(31,41,55,0.8);
      background: transparent;
      padding-bottom: 8px;
    }

    .card-secondary .dash-card-title {
      color: #e5e7eb;
    }

    .card-secondary .dash-card-body {
      background: transparent;
    }

    .tool-list {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .tool-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 10px;
      padding: 10px 11px;
      border-radius: var(--radius);
      background: rgba(15,23,42,0.55);
      border: 1px solid rgba(148,163,184,0.45);
    }

    .tool-main {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .tool-icon {
      width: 28px;
      height: 28px;
      border-radius: 999px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: rgba(15,23,42,0.9);
      font-size: 0.85rem;
    }

    .tool-text-title {
      font-size: 0.9rem;
      font-weight: 600;
    }

    .tool-text-sub {
      font-size: 0.8rem;
      color: rgba(203,213,225,0.95);
    }

    .tool-cta {
      font-size: 0.78rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: rgba(191,219,254,0.95);
      display: inline-flex;
      align-items: center;
      gap: 6px;
    }

    .tool-cta i {
      font-size: 0.7rem;
    }
  </style>
</head>
<body class="dash-body">
<main class="container">

  <input type="hidden" id="csrf_admin_index" value="{{ csrf_token }}">

  <div class="dash-header">
    <div>
      <h1 class="dash-title">
        <i class="fa-solid fa-screwdriver-wrench" style="margin-right:10px;color:var(--primary)"></i>
        Admin Panel
      </h1>
      <p class="dash-sub">
        Welcome, <b>{{ user.email }}</b>. Use these tools to manage the platform.
      </p>
    </div>
    <div class="dash-actions">
      <a href="{{ path('web_admin_users') }}" class="btn">
        <i class="fa-solid fa-users"></i>
        Users
      </a>
      <a href="{{ path('web_admin_companies') }}" class="btn btn-secondary">
        <i class="fa-solid fa-building"></i>
        Companies
      </a>
      <a href="{{ path('web_admin_jobs') }}" class="btn btn-secondary">
        <i class="fa-solid fa-briefcase"></i>
        Jobs
      </a>
      <form class="logout-form" method="post" action="/logout">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">
        <button class="btn btn-accent" type="submit">
          <i class="fa-solid fa-right-from-bracket"></i>
          Logout
        </button>
      </form>
    </div>
  </div>

  <div class="dash-grid">
    <section class="dash-card">
      <div class="dash-card-head">
        <h2 class="dash-card-title">
          <i class="fa-solid fa-chart-line"></i>
          Overview
        </h2>
      </div>
      <div class="dash-card-body">
        <div class="kpi-grid">
          <div class="kpi">
            <div class="kpi-top">
              <div class="kpi-label">Users</div>
              <div class="kpi-icon">
                <i class="fa-solid fa-users"></i>
              </div>
            </div>
            <div class="kpi-value">{{ user_count }}</div>
          </div>

          <div class="kpi">
            <div class="kpi-top">
              <div class="kpi-label">Companies</div>
              <div class="kpi-icon">
                <i class="fa-solid fa-building"></i>
              </div>
            </div>
            <div class="kpi-value">{{ company_count }}</div>
          </div>

          <div class="kpi">
            <div class="kpi-top">
              <div class="kpi-label">Jobs</div>
              <div class="kpi-icon">
                <i class="fa-solid fa-briefcase"></i>
              </div>
            </div>
            <div class="kpi-value">{{ job_count }}</div>
          </div>
        </div>
      </div>
    </section>

    <section class="dash-card card-secondary">
      <div class="dash-card-head">
        <h2 class="dash-card-title">
          <i class="fa-solid fa-bolt"></i>
          Quick Admin Actions
        </h2>
      </div>
      <div class="dash-card-body">
        <ul class="tool-list">
          <li class="tool-item">
            <div class="tool-main">
              <div class="tool-icon">
                <i class="fa-solid fa-user-plus"></i>
              </div>
              <div>
                <div class="tool-text-title">Review new signups</div>
                <div class="tool-text-sub">Scan user list and adjust roles or statuses when needed.</div>
              </div>
            </div>
            <a href="{{ path('web_admin_users') }}" class="tool-cta">
              Manage users <i class="fa-solid fa-arrow-right"></i>
            </a>
          </li>

          <li class="tool-item">
            <div class="tool-main">
              <div class="tool-icon">
                <i class="fa-solid fa-building-circle-check"></i>
              </div>
              <div>
                <div class="tool-text-title">Validate companies</div>
                <div class="tool-text-sub">Confirm legitimate employers and manage memberships.</div>
              </div>
            </div>
            <a href="{{ path('web_admin_companies') }}" class="tool-cta">
              Open companies <i class="fa-solid fa-arrow-right"></i>
            </a>
          </li>

          <li class="tool-item">
            <div class="tool-main">
              <div class="tool-icon">
                <i class="fa-solid fa-shield"></i>
              </div>
              <div>
                <div class="tool-text-title">Moderate job postings</div>
                <div class="tool-text-sub">Remove spam, flag issues, and keep listings high quality.</div>
              </div>
            </div>
            <a href="{{ path('web_admin_jobs') }}" class="tool-cta">
              Review jobs <i class="fa-solid fa-arrow-right"></i>
            </a>
          </li>
        </ul>
      </div>
    </section>
  </div>

</main>
</body>
</html>
