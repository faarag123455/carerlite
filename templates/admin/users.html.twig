{# templates/admin/users.html.twig #}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Manage Users | EliteCareer</title>

  {# Fonts & Icons #}
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css">

  <style>
    :root {
      --primary: #2563eb;
      --primary-light: #60a5fa;
      --accent: #ec4899;
      --light: #f1f5f9;
      --darker: #0f172a;
      --gray: #64748b;
      --gray-light: #e2e8f0;
      --gray-lighter: #f8fafc;
      --success: #16a34a;
      --error: #ef4444;
      --warning: #f59e0b;
      --radius: 0.75rem;
      --radius-lg: 1rem;
      --shadow: 0 8px 20px rgba(15,23,42,0.08);
      --shadow-lg: 0 16px 40px rgba(15,23,42,0.12);
      --transition: 180ms ease;
    }

    * {
      box-sizing: border-box;
    }

    html, body {
      margin: 0;
      padding: 0;
    }

    body.dash-body {
      font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background:
        radial-gradient(circle at top left, #e0f2fe 0, #f9fafb 45%, #f8fafc 100%);
      color: var(--darker);
      -webkit-font-smoothing: antialiased;
    }

    .container {
      max-width: 1120px;
      margin: 0 auto;
      padding: 140px 20px 80px;
    }

    @media (max-width: 768px) {
      .container {
        padding: 110px 16px 56px;
      }
    }

    /* Header */
    .dash-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 16px;
      margin-bottom: 26px;
      flex-wrap: wrap;
    }

    .dash-title {
      font-family: "Plus Jakarta Sans", system-ui, sans-serif;
      font-size: 2rem;
      line-height: 1.2;
      font-weight: 800;
      color: var(--darker);
      margin: 0 0 6px;
      letter-spacing: -0.02em;
    }

    .dash-sub {
      margin: 0;
      color: var(--gray);
      font-size: 0.95rem;
    }

    .dash-actions {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      align-items: center;
      justify-content: flex-end;
    }

    /* Buttons */
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      padding: 9px 18px;
      border-radius: 999px;
      border: 1px solid transparent;
      font-size: 0.9rem;
      font-weight: 600;
      text-decoration: none;
      cursor: pointer;
      background: linear-gradient(135deg, var(--primary), var(--primary-light));
      color: #ffffff;
      box-shadow: 0 10px 18px rgba(37,99,235,0.25);
      transition: transform var(--transition), box-shadow var(--transition), background var(--transition), opacity var(--transition);
      white-space: nowrap;
    }

    .btn:hover {
      transform: translateY(-1px);
      box-shadow: 0 14px 30px rgba(37,99,235,0.28);
      opacity: 0.97;
    }

    .btn:active {
      transform: translateY(0);
      box-shadow: 0 6px 14px rgba(30,64,175,0.45);
    }

    .btn-secondary {
      background: rgba(15,23,42,0.02);
      color: var(--darker);
      border-color: rgba(148,163,184,0.6);
      box-shadow: 0 8px 18px rgba(15,23,42,0.06);
    }

    .btn-secondary:hover {
      background: rgba(15,23,42,0.06);
    }

    .auth-link {
      color: var(--primary);
      text-decoration: none;
      font-weight: 500;
    }

    .auth-link:hover {
      text-decoration: underline;
    }

    /* Card */
    .dash-card {
      background: #ffffff;
      border-radius: var(--radius-lg);
      border: 1px solid rgba(148,163,184,0.35);
      box-shadow: var(--shadow-lg);
      padding: 0;
      overflow: hidden;
    }

    .dash-card-head {
      padding: 16px 20px;
      border-bottom: 1px solid var(--gray-light);
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 12px;
      background:
        linear-gradient(180deg, rgba(59,130,246,0.06), transparent),
        radial-gradient(circle at top right, rgba(236,72,153,0.06), transparent 55%);
    }

    .dash-card-title {
      margin: 0;
      font-size: 1.05rem;
      font-weight: 800;
      color: var(--darker);
      display: inline-flex;
      align-items: center;
      gap: 8px;
      font-family: "Plus Jakarta Sans", system-ui, sans-serif;
    }

    .dash-card-body {
      padding: 18px 20px 20px;
      background: #ffffff;
    }

    .muted {
      color: rgba(100,116,139,0.95);
    }

    /* Table */
    .users-table-wrap {
      width: 100%;
      overflow-x: auto;
    }

    .users-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.9rem;
      min-width: 720px;
    }

    .users-table thead th {
      background: rgba(248,250,252,0.9);
      font-weight: 600;
      color: var(--gray);
      font-size: 0.78rem;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      padding: 9px 12px;
      border-bottom: 1px solid var(--gray-light);
      text-align: left;
      white-space: nowrap;
    }

    .users-table tbody td {
      padding: 10px 12px;
      border-bottom: 1px solid var(--gray-lighter);
      vertical-align: top;
      color: #0f172a;
    }

    .users-table tbody tr:last-child td {
      border-bottom: none;
    }

    .users-table tbody tr:hover {
      background: #f8fafc;
    }

    /* Role badges */
    .roles-cell {
      max-width: 260px;
    }

    .role-pill {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 2px 10px;
      border-radius: 999px;
      font-size: 0.75rem;
      font-weight: 500;
      margin: 2px 4px 2px 0;
      border: 1px solid rgba(148,163,184,0.6);
      background: rgba(248,250,252,0.9);
      color: var(--gray);
      white-space: nowrap;
    }

    .role-pill--admin {
      border-color: rgba(59,130,246,0.6);
      background: rgba(59,130,246,0.08);
      color: var(--primary);
    }

    .role-pill--hr {
      border-color: rgba(16,185,129,0.6);
      background: rgba(16,185,129,0.08);
      color: var(--success);
    }

    .role-pill--candidate {
      border-color: rgba(236,72,153,0.6);
      background: rgba(236,72,153,0.08);
      color: var(--accent);
    }

    /* Status badge */
    .status-pill {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 4px 10px;
      border-radius: 999px;
      font-size: 0.78rem;
      font-weight: 500;
      border: 1px solid var(--gray-light);
      background: rgba(148,163,184,0.12);
      color: var(--darker);
      white-space: nowrap;
    }

    .status-pill--active {
      background: rgba(16,185,129,0.08);
      border-color: rgba(16,185,129,0.45);
      color: var(--success);
    }

    .status-pill--suspended {
      background: rgba(239,68,68,0.06);
      border-color: rgba(239,68,68,0.45);
      color: var(--error);
    }

    .status-pill i {
      font-size: 0.7rem;
    }

    /* Empty state */
    .empty-state {
      padding: 10px 4px 4px;
      font-size: 0.93rem;
      color: var(--gray);
    }

    .empty-state i {
      margin-right: 6px;
      color: var(--warning);
    }

    @media (max-width: 640px) {
      .dash-card-body {
        padding: 14px 12px 16px;
      }
    }
  </style>
</head>
<body class="dash-body">
<main class="container">

  <input type="hidden" id="csrf_admin_users" value="{{ csrf_token }}">

  <div class="dash-header">
    <div>
      <h1 class="dash-title">
        <i class="fa-solid fa-users" style="margin-right:8px;color:var(--primary)"></i>
        Users
      </h1>
      <p class="dash-sub">Review and manage all registered users.</p>
    </div>
    <div class="dash-actions">
      <a href="{{ path('web_admin_index') }}" class="btn btn-secondary">
        <i class="fa-solid fa-screwdriver-wrench"></i>
        Admin home
      </a>
    </div>
  </div>

  <div class="dash-card">
    <div class="dash-card-head">
      <h2 class="dash-card-title">
        <i class="fa-solid fa-list"></i>
        User list
      </h2>
      <span class="muted" style="font-size:0.82rem">
        {{ users|length }} user{{ users|length == 1 ? '' : 's' }}
      </span>
    </div>
    <div class="dash-card-body">
      {% if users is not empty %}
        <div class="users-table-wrap">
          <table class="users-table">
            <thead>
            <tr>
              <th>Email</th>
              <th>Roles</th>
              <th>Status</th>
              <th>Created</th>
            </tr>
            </thead>
            <tbody>
            {% for u in users %}
              {% set status = u.status|default('ACTIVE') %}
              <tr>
                <td>
                  <strong>{{ u.email }}</strong>
                </td>
                <td class="roles-cell">
                  {% set roleList = u.roles|default([]) %}
                  {% if roleList is not empty %}
                    {% for r in roleList %}
                      {% set rUpper = r|upper %}
                      <span class="role-pill
                        {% if rUpper == 'ROLE_ADMIN' %}
                          role-pill--admin
                        {% elseif rUpper == 'ROLE_HR' %}
                          role-pill--hr
                        {% elseif rUpper == 'ROLE_CANDIDATE' %}
                          role-pill--candidate
                        {% endif %}">
                        <i class="fa-solid fa-shield-halved"></i>
                        {{ rUpper }}
                      </span>
                    {% endfor %}
                  {% else %}
                    <span class="muted">—</span>
                  {% endif %}
                </td>
                <td>
                  <span class="status-pill
                    {% if status == 'ACTIVE' %}
                      status-pill--active
                    {% elseif status == 'SUSPENDED' %}
                      status-pill--suspended
                    {% endif %}">
                    <i class="fa-solid
                      {% if status == 'ACTIVE' %}
                        fa-circle-check
                      {% elseif status == 'SUSPENDED' %}
                        fa-circle-xmark
                      {% else %}
                        fa-circle-dot
                      {% endif %}"></i>
                    {{ status }}
                  </span>
                </td>
                <td>
                  {{ u.createdAt ? u.createdAt|date('Y-m-d H:i') : '—' }}
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      {% else %}
        <p class="empty-state">
          <i class="fa-solid fa-circle-info"></i>
          No users found.
        </p>
      {% endif %}
    </div>
  </div>

</main>
</body>
</html>
