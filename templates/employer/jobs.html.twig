{# templates/employer/jobs.html.twig #}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>My Jobs | EliteCareer</title>

  {# Google Fonts + Font Awesome #}
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css">

  <style>
    :root {
      --primary: #2563eb;
      --primary-light: #60a5fa;
      --accent: #ec4899;
      --light: #f1f5f9;
      --darker: #0f172a;
      --dark: #020617;
      --gray: #64748b;
      --gray-light: #e2e8f0;
      --gray-lighter: #f8fafc;
      --success: #16a34a;
      --warning: #f59e0b;
      --error: #ef4444;
      --radius: 0.75rem;
      --radius-lg: 1rem;
      --shadow: 0 8px 20px rgba(15,23,42,0.08);
      --shadow-lg: 0 18px 45px rgba(15,23,42,0.18);
      --transition: 180ms ease;
    }

    * {
      box-sizing: border-box;
    }

    html, body {
      margin: 0;
      padding: 0;
    }

    body {
      font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background:
        radial-gradient(circle at top left, #e0f2fe 0, #f9fafb 40%, #f8fafc 100%);
      color: var(--darker);
      -webkit-font-smoothing: antialiased;
    }

    .container {
      max-width: 1120px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .jobs-shell {
      padding: 140px 0 80px;
    }

    .jobs-inner {
      max-width: 1120px;
      margin: 0 auto;
    }

    /* Header */
    .jobs-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 16px;
      margin-bottom: 24px;
      flex-wrap: wrap;
    }

    .jobs-title {
      font-family: "Plus Jakarta Sans", system-ui, sans-serif;
      font-size: 2.1rem;
      font-weight: 800;
      color: var(--darker);
      letter-spacing: -0.03em;
      margin: 0 0 4px;
    }

    .jobs-sub {
      color: var(--gray);
      font-size: 0.95rem;
      margin: 0;
    }

    .jobs-actions {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }

    /* Buttons */
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      padding: 9px 18px;
      border-radius: 999px;
      border: 1px solid transparent;
      font-size: 0.9rem;
      font-weight: 600;
      text-decoration: none;
      cursor: pointer;
      background: linear-gradient(135deg, var(--primary), var(--primary-light));
      color: #ffffff;
      box-shadow: 0 10px 24px rgba(37,99,235,0.3);
      transition: transform var(--transition),
                  box-shadow var(--transition),
                  opacity var(--transition),
                  background var(--transition);
      white-space: nowrap;
    }

    .btn:hover {
      transform: translateY(-1px);
      box-shadow: 0 16px 32px rgba(37,99,235,0.35);
      opacity: 0.97;
    }

    .btn:active {
      transform: translateY(0);
      box-shadow: 0 8px 18px rgba(30,64,175,0.5);
    }

    .btn-secondary {
      background: rgba(15,23,42,0.02);
      color: var(--darker);
      border-color: rgba(148,163,184,0.7);
      box-shadow: 0 10px 20px rgba(15,23,42,0.06);
    }

    .btn-secondary:hover {
      background: rgba(15,23,42,0.06);
      box-shadow: 0 12px 26px rgba(15,23,42,0.1);
    }

    .btn-accent {
      background: linear-gradient(135deg, var(--accent), #fb7185);
      border-color: transparent;
      box-shadow: 0 10px 24px rgba(236,72,153,0.38);
      color: #fff;
    }

    .btn-accent:hover {
      box-shadow: 0 16px 32px rgba(236,72,153,0.45);
    }

    .btn-xs {
      font-size: 0.78rem;
      padding: 6px 12px;
      border-radius: 999px;
    }

    /* Flash alerts (reuse across dashboard) */
    .alert {
      margin-bottom: 16px;
      padding: 10px 12px;
      border-radius: var(--radius);
      font-size: 0.9rem;
      border: 1px solid;
      display: flex;
      gap: 10px;
      align-items: flex-start;
      background: #fff;
    }

    .alert i {
      margin-top: 2px;
    }

    .alert-success {
      background: rgba(16,185,129,0.08);
      border-color: rgba(16,185,129,0.35);
      color: var(--success);
    }

    .alert-error {
      background: rgba(239,68,68,0.06);
      border-color: rgba(239,68,68,0.35);
      color: var(--error);
    }

    /* Jobs table card */
    .jobs-table-card {
      background: #ffffff;
      border-radius: var(--radius-lg);
      border: 1px solid rgba(148,163,184,0.45);
      box-shadow: var(--shadow-lg);
      overflow: hidden;
    }

    .jobs-card-head {
      padding: 16px 18px;
      border-bottom: 1px solid var(--gray-light);
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 12px;
      background:
        linear-gradient(180deg, rgba(59,130,246,0.07), transparent 55%);
    }

    .jobs-card-title {
      margin: 0;
      font-size: 1rem;
      font-weight: 800;
      color: var(--darker);
      display: flex;
      align-items: center;
      gap: 8px;
      letter-spacing: 0.02em;
    }

    .jobs-card-meta {
      font-size: 0.82rem;
      color: var(--gray);
    }

    .jobs-card-meta strong {
      color: var(--darker);
    }

    table.jobs-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.9rem;
    }

    .jobs-table th,
    .jobs-table td {
      padding: 10px 14px;
      border-bottom: 1px solid var(--gray-lighter);
      text-align: left;
      vertical-align: top;
    }

    .jobs-table th {
      background: rgba(248,250,252,0.95);
      font-weight: 600;
      color: var(--gray);
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .jobs-table tbody tr:hover {
      background: rgba(248,250,252,0.65);
    }

    .jobs-job-title {
      font-weight: 600;
      color: var(--darker);
      margin-bottom: 2px;
      display: inline-flex;
      align-items: center;
      gap: 6px;
    }

    .jobs-job-meta {
      font-size: 0.8rem;
      color: var(--gray);
      margin-top: 2px;
    }

    /* Status pills */
    .jobs-status-pill {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 4px 10px;
      border-radius: 999px;
      font-size: 0.78rem;
      border: 1px solid var(--gray-light);
      background: rgba(248,250,252,0.96);
      color: var(--dark);
    }

    .jobs-status-pill--published {
      background: rgba(16,185,129,0.06);
      border-color: rgba(16,185,129,0.4);
      color: var(--success);
    }

    .jobs-status-pill--draft {
      background: rgba(148,163,184,0.12);
      border-color: rgba(148,163,184,0.5);
      color: var(--dark);
    }

    .jobs-status-pill i {
      font-size: 0.8rem;
    }

    /* Actions column */
    .jobs-actions-cell {
      min-width: 180px;
    }

    .jobs-actions-inline {
      margin-top: 4px;
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    .jobs-empty {
      padding: 20px;
      font-size: 0.95rem;
      color: var(--gray);
      background: #ffffff;
    }

    .auth-link {
      font-weight: 600;
      color: var(--primary);
      text-decoration: none;
    }

    .auth-link:hover {
      text-decoration: underline;
    }

    @media (max-width: 768px) {
      .jobs-table th:nth-child(3),
      .jobs-table td:nth-child(3) {
        display: none; /* hide Published column on small screens */
      }
    }
  </style>
</head>
<body>

<main class="jobs-shell">
  <div class="jobs-inner">

    {# CSRF token available for forms / JS on this page #}
    <input type="hidden" id="csrf_manage_jobs" value="{{ csrf_token }}">

    <script>
      // If you need CSRF in JS (for fetch/AJAX)
      window.CSRF_MANAGE_JOBS = "{{ csrf_token|e('js') }}";
    </script>

    <header class="jobs-header">
      <div>
        <h1 class="jobs-title">
          <i class="fa-solid fa-briefcase" style="margin-right:8px;color:var(--primary)"></i>
          My Jobs
        </h1>
        <p class="jobs-sub">
          Manage the roles you’ve published for your company.
        </p>
      </div>
      <div class="jobs-actions">
        <a href="{{ path('web_job_new') }}" class="btn">
          <i class="fa-solid fa-plus"></i>
          New Job
        </a>
        <a href="{{ path('web_dashboard') }}" class="btn btn-secondary">
          <i class="fa-solid fa-gauge-high"></i>
          Back to dashboard
        </a>
      </div>
    </header>

    {# Flash messages (optional, in case controller sets them) #}
    {% for msg in app.flashes('success') %}
      <div class="alert alert-success">
        <i class="fa-solid fa-circle-check"></i>
        <span>{{ msg }}</span>
      </div>
    {% endfor %}

    {% for msg in app.flashes('error') %}
      <div class="alert alert-error">
        <i class="fa-solid fa-circle-exclamation"></i>
        <span>{{ msg }}</span>
      </div>
    {% endfor %}

    <section class="jobs-table-card">
      <div class="jobs-card-head">
        <h2 class="jobs-card-title">
          <i class="fa-solid fa-list-check"></i>
          Job postings
        </h2>
        <span class="jobs-card-meta">
          <strong>{{ jobs|length }}</strong> job{{ jobs|length == 1 ? '' : 's' }}
        </span>
      </div>

      {% if jobs is not empty %}
        <table class="jobs-table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Status</th>
              <th>Published</th>
              <th>Location</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for job in jobs %}
              {% set status = job.status|default('DRAFT') %}
              <tr>
                <td>
                  <div class="jobs-job-title">
                    {{ job.title }}
                  </div>
                  <div class="jobs-job-meta">
                    {{ job.employmentType|default('') }}{% if job.workMode %} • {{ job.workMode }}{% endif %}
                  </div>
                </td>
                <td>
                  <span class="jobs-status-pill {{ status == 'PUBLISHED' ? 'jobs-status-pill--published' : 'jobs-status-pill--draft' }}">
                    <i class="fa-solid {{ status == 'PUBLISHED' ? 'fa-circle-check' : 'fa-circle-dot' }}"></i>
                    {{ status }}
                  </span>
                </td>
                <td>
                  {{ job.publishedAt ? job.publishedAt|date('Y-m-d H:i') : '—' }}
                </td>
                <td>
                  {{ job.location|default('—') }}
                </td>
                <td class="jobs-actions-cell">
                  <div class="jobs-actions-inline">
                    <a href="{{ path('web_employer_job_edit', { id: job.id }) }}" class="btn btn-secondary btn-xs">
                      <i class="fa-solid fa-pen-to-square"></i>
                      Edit
                    </a>
                    <form
                      method="post"
                      action="{{ path('web_employer_job_delete', { id: job.id }) }}"
                      onsubmit="return confirm('Are you sure you want to delete this job?');"
                      style="display:inline-block;margin:0;"
                    >
                      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">
                      <button type="submit" class="btn btn-accent btn-xs">
                        <i class="fa-solid fa-trash"></i>
                        Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      {% else %}
        <div class="jobs-empty">
          You haven’t posted any jobs yet.
          <a href="{{ path('web_job_new') }}" class="auth-link">Post your first job</a>.
        </div>
      {% endif %}
    </section>

  </div>
</main>

</body>
</html>
